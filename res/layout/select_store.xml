<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_action_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/store_search"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/place_image"
            android:layout_below="@+id/place_image"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="  Search for Store"
            android:inputType="text"
            android:padding="8dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/place_image"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/place_image"
            android:text="Place Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/store_search"
            android:layout_marginTop="73dp"
            android:src="@drawable/magnifying_glass113" />

        <ImageView
            android:id="@+id/newstore_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/store_search"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="73dp"
            android:onClick="newstore"
            android:src="@drawable/newstore_button" />

    </RelativeLayout>

    <ScrollView      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/grey"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/all_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/all_no2" />

        <ImageView
            android:id="@+id/all_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/all_yes2" />

        <ImageView
            android:id="@+id/food_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/all_no"
            android:scaleType="fitXY"
            android:src="@drawable/food_no" />

        <ImageView
            android:id="@+id/food_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:layout_toRightOf="@+id/all_no"
            android:scaleType="fitXY"
            android:src="@drawable/food_yes" />

        <ImageView
            android:id="@+id/books_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/food_no"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/books_no" />

        <ImageView
            android:id="@+id/books_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/food_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/books_yes" />

        <ImageView
            android:id="@+id/clothings_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/books_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/clothings_no" />

        <ImageView
            android:id="@+id/clothings_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/books_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/clothings_yes" />

        <ImageView
            android:id="@+id/electronics_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/clothings_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/electronics_no" />

        <ImageView
            android:id="@+id/electronics_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/clothings_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/electronics_yes" />

        <ImageView
            android:id="@+id/entertainments_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/electronics_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/entertainments_no" />

        <ImageView
            android:id="@+id/entertainments_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/electronics_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/entertainments_yes" />

        <ImageView
            android:id="@+id/health_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/entertainments_no"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/health_no" />

        <ImageView
            android:id="@+id/health_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/entertainments_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/health_yes" />

        <ImageView
            android:id="@+id/others_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/health_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/others_no2" />

        <ImageView
            android:id="@+id/others_yes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/health_no"
            android:adjustViewBounds="true"
             android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/others_yes2" />

        <ImageView
            android:id="@+id/line_horizontal"
            android:layout_width="1500dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/line_horizontal" />
    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/status_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/store_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_row_selector" >
        </ListView>
    </RelativeLayout>

</LinearLayout>