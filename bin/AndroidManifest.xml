<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jab.storepedia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name="com.jab.storepedia.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/store_icon2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name=".select_location"
            android:label="@string/app_name">
            <intent-filter >
                <action  android:name="in.wptrafficanalyzer.select_location"/>
                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".select_store"
            android:label="@string/app_name">
            <intent-filter >
                <action  android:name="in.wptrafficanalyzer.select_store"/>
                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".store_detail"
            android:label="@string/app_name">
            <intent-filter >
                <action  android:name="in.wptrafficanalyzer.store_detail"/>
                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".show_lcomment"
            android:label="@string/app_name">
            <intent-filter >
                <action  android:name="in.wptrafficanalyzer.show_lcomment"/>
                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".store_search_result"
            android:label="@string/app_name">
            <intent-filter >
                <action  android:name="in.wptrafficanalyzer.store_search_result"/>
                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".select_categories"
            android:label="@string/app_name">
            <intent-filter >
                <action  android:name="in.wptrafficanalyzer.select_categories"/>
                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
    

</manifest>
